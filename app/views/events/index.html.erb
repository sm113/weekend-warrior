<div class="events-container">
  <h1 class="text-center mb-4">Upcoming Events</h1>
  
  <div class="row justify-content-center">
    <% @events.each do |event| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <% if event.image.present? %>
            <img src="<%= event.image %>" class="card-img-top" alt="<%= event.title %>">
          <% else %>
            <div class="card-img-top bg-dark d-flex align-items-center justify-content-center">
              <span class="text-muted">No image</span>
            </div>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= event.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted">By <%= event.organization.name %></h6>
            <p class="card-text"><%= event.description.truncate(100) %></p>
            <p class="card-text">
              <small class="text-muted">
                <%= event.start_time.strftime("%b %d, %Y â€¢ %I:%M %p") %>
              </small>
            </p>
            <p class="card-text"><i class="bi bi-geo-alt"></i> <%= event.location %></p>
            <%= link_to "View Details", event, class: "btn btn-danger mt-2" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
